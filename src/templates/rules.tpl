{#rules}

<div class="section rule">

	<div class="form-group" style="line-height: 30px;">

		<strong>Field:</strong> &nbsp;
		<select class="control-rule-field" disabled>

			<option>{field}</option>

		</select> &nbsp;

		<strong>Condition:</strong> 
		<select class="control-rule-condition" disabled>
			<option>Equal</option>
		</select>

		<br/>

		<strong>Value:</strong> &nbsp;
		<select class="control-rule-value" disabled>
			<option>{value}</option>
		</select> &nbsp;

		<strong>Action:</strong> &nbsp;
		<select class="control-rule-action" disabled>
			<option>{action}</option>
		</select>

		<br/>

		<strong>Target:</strong> &nbsp;
		<select class="control-rule-target" disabled>
			<option>{target}</option>
		</select>
	
	</div>

	<button class="control-remove-rule" style="margin-top: 10px;">Remove</button>

</div>

{/rules}
